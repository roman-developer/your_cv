<div class="title_section">
	<h1>Welcome to Your CV</h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
		<div class="btn-group" role="group" aria-label="...">
		  <%= @user.has_profile? ? (link_to "Ver perfil", profile_path(@user.profile), class: "btn btn-default") : (link_to "Crear perfil", new_profile_path, class: "btn btn-default") %>
		  <%= link_to "Crear CV", new_curriculum_path, class: "btn btn-default" %>
		  <%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
		</div>


		<% @user.curriculums.each do|cv| %>
			<div class="card">
				<%= link_to curriculum_path(cv)  do %>
			  	<div class="content">
			    	<h4 class="title"><i class="fa fa-briefcase" aria-hidden="true"></i> <%= cv.professional_profile %></h4>
			    	<p class="text"><%= cv.summary %></p>
			  	</div>
				<% end %>
				<div class="card-block">
					<%= link_to edit_curriculum_path(cv), class: "card-link pull-left" do %>Edit&nbsp;<i class="fa fa-pencil-square-o"></i><% end %>
    			<%= link_to curriculum_path(cv), method: :delete,  data: { confirm: 'Are you sure?' }, class: "card-link pull-right" do %>Delete&nbsp;<i class="fa fa-times"></i><% end %>
  			</div>
			</div>
		<% end %>
	</div>
</div>
