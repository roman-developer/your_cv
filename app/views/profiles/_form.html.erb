<%= form_for @profile, html:{class: "form-horizontal"}  do |f| %>

			<div class="form-group">
			  <%= f.label I18n.t('profile.form.name'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :name, class: "form-control" %></div>
		  </div>
			
			<div class="form-group">
			  <%= f.label I18n.t('profile.form.last_name'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :last_name, class: "form-control" %></div>
		  </div>

		  <div class="form-group">
			  <%= f.label I18n.t('profile.form.age'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :age, class: "form-control" %></div>
		  </div>

		  <div class="form-group">
			  <%= f.label I18n.t('profile.form.phone'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :phone, class: "form-control" %></div>
		  </div>

			<div class="form-group">
			  <%= f.label I18n.t('profile.form.url_1'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_1, placeholder: I18n.t('profile.form.placeholder_url_1'), class: "form-control" %></div>
		  </div>
		  <div class="form-group">
			  <%= f.label I18n.t('profile.form.url_2'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_2, placeholder: I18n.t('profile.form.placeholder_url_2'), class: "form-control" %></div>
		  </div>
		  <div class="form-group">
			  <%= f.label I18n.t('profile.form.url_3'), class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_3, placeholder: I18n.t('profile.form.placeholder_url_3'), class: "form-control" %></div>
		  </div>
		  <div class="form-group">
		  	<%= f.label I18n.t('profile.form.avatar'), class: "col-sm-2"  %>
	  		<div class="col-sm-5"><%= f.file_field :avatar %></div>
	  	</div>
	  	<div class="form-group">
				<div class="col-sm-2"><%= f.submit I18n.t('profile.form.submit'), class: "btn btn-success" %></div>
				<div class="col-sm-10"><%= link_to I18n.t('profile.form.cancel'), authenticated_root_path, class: "btn btn-default" %></div>
			</div>

	  <% end %>