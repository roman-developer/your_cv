<div class="title_section">
	<h1>Edita tu perfil.</h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
		<%= form_for @profile, html:{class: "form-horizontal"}  do |f| %>

			<div class="form-group">
			  <%= f.label :name, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :name, class: "form-control" %></div>
		  </div>
			
			<div class="form-group">
			  <%= f.label :last_name, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :last_name, class: "form-control" %></div>
		  </div>

		  <div class="form-group">
			  <%= f.label :age, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :age, class: "form-control" %></div>
		  </div>

		  <div class="form-group">
			  <%= f.label :phone, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :phone, class: "form-control" %></div>
		  </div>

			<div class="form-group">
			  <%= f.label :url_1, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_1, placeholder: 'Enter your personal url, for example: http://my-blog.com', class: "form-control" %></div>
		  </div>
		  <div class="form-group">
			  <%= f.label :url_2, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_2, placeholder: 'Enter your personal url, for example: http://my-blog.com', class: "form-control" %></div>
		  </div>
		  <div class="form-group">
			  <%= f.label :url_3, class: "col-sm-2"  %>
			  <div class="col-sm-5"><%= f.text_field :url_3, placeholder: 'Enter your personal url, for example: http://my-blog.com', class: "form-control" %></div>
		  </div>
		  <div class="form-group">
		  	<%= f.label :avatar, class: "col-sm-2"  %>
	  		<div class="col-sm-5"><%= f.file_field :avatar %></div>
	  	</div>
	  	<div class="form-group">
				<div class="col-sm-2"><%= f.submit "Modificar Perfil", class: "btn btn-success" %></div>
				<div class="col-sm-10"><%= link_to "Inicio", authenticated_root_path, class: "btn btn-default" %></div>
			</div>

	  <% end %>
  </div>
</div>
