<div class="nested-fields">	
	<div class="form-group">
		<%= f.label I18n.t('curriculum.form.job'), class: "col-sm-2"  %>
		<div class="col-sm-5"><%= f.text_field :job , class: "form-control" %></div>
	</div>
	<div class="form-group">
		<%= f.label I18n.t('curriculum.form.company'), class: "col-sm-2"  %>
		<div class="col-sm-5"><%= f.text_field :company , class: "form-control" %></div>
	</div>
	<div class="form-group">
		<%= f.label I18n.t('curriculum.form.start_date'), class: "col-sm-2"  %><i class="fa fa-calendar" aria-hidden="true"></i>
		<div class="col-sm-5"><%= f.text_field :start_date , class: "form-control", 'data-provide'=>'datepicker' %></div>
	</div>
	<div class="form-group">
		<%= f.label I18n.t('curriculum.form.end_date'), class: "col-sm-2"  %><i class="fa fa-calendar" aria-hidden="true"></i>
		<div class="col-sm-5"><%= f.text_field :end_date , class: "form-control", 'data-provide'=>'datepicker' %></div>
	</div>
	<div class="form-group">
		<%= f.label I18n.t('curriculum.form.description'), class: "col-sm-2"  %>
		<div class="col-sm-5"><%= f.text_area :description , class: "form-control" %></div>
	</div>
 <%= link_to_remove_association I18n.t('curriculum.form.remove_experience'), f %>
</div>