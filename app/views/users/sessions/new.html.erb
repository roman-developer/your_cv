<div class="container">
  <div class="row">
    <div class="col-md-offset-5 col-md-3 login-box">
    	<div class="title_section text-center">
				<h1>Your CV</h1>
			</div>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
			  <div class="input-group-lg">
			  	<%= f.email_field :email, placeholder: "Email", class: "form-control" ,  autofocus: true %>
			    <%= f.password_field :password, placeholder: "ContraseÃ±a", class: "form-control" , autocomplete: "off" %>
		    </div>
			  <div class="input-group">
				  <% if devise_mapping.rememberable? -%>
				  	<%= f.check_box :remember_me %> <%= f.label "Recuerda tu contraseÃ±a" %>
				  <% end -%>
			   </div>
			  <div class="input-group center-buttons">
				  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
	 					<i class="fa fa-sign-in"></i> Entrar
					<% end %>
			  	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  					<%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-default" %>
					<% end -%>
			  	<%#= render "users/shared/links" %>
			  </div>
			<% end %>
			
		</div>
	</div>
</div>
