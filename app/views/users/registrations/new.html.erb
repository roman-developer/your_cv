<div class="container">
	<div class="row">
    <div class="col-md-offset-5 col-md-3 login-box">
    	<div class="title_section text-center">
				<h1>Regístrate en Your CV</h1>
			</div>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="input-group">
				  	<%= f.email_field :email,placeholder: "Email", class: "form-control", autofocus: true %>
				    <%= f.password_field :password,placeholder: "Contraseña", class: "form-control", autocomplete: "off" %>
				    <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", class: "form-control", autocomplete: "off" %>
				  </div>
				  <div class="input-group center-buttons">
				  	<%= f.submit "Registrarse", class: "btn btn-primary" %>
				  	<%- if controller_name != 'sessions' %>
  						<%= link_to new_session_path(resource_name), class: "btn btn-default"  do %>
  							<i class="fa fa-sign-in"></i> Entrar
  						<% end %>
						<% end -%>
				  </div>
				<% end %>

				<%#= render "users/shared/links" %>
		</div>
	</div>
</div>
