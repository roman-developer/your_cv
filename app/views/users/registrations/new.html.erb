<div class="container">
	<div class="row">
    <div class="col-md-offset-5 col-md-3 login-box">
    	<div class="title_section text-center">
				<h1>RegÃ­strate en Your CV</h1>
			</div>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
				  <% if resource.errors.any? %>
				  	<div class="alert alert-danger" role="alert">
				  		<%= devise_error_messages! %>
				  	</div>
				  <% end %>

				  <div class="input-group">
				  	<%= f.email_field :email, placeholder: I18n.t('registration.email_placeholder'), class: "form-control", autofocus: true %>
				    <%= f.password_field :password,placeholder: I18n.t('registration.pass_placeholder'), class: "form-control", autocomplete: "off" %>
				    <%= f.password_field :password_confirmation, placeholder: I18n.t('registration.confirm_pass_placeholder'), class: "form-control", autocomplete: "off" %>
				  </div>
				  <div class="input-group center-buttons">
				  	<%= f.submit I18n.t('registration.sing_up'), class: "btn btn-primary" %>
				  	<%- if controller_name != 'sessions' %>
  						<%= link_to new_session_path(resource_name), class: "btn btn-default"  do %>
  							<i class="fa fa-sign-in"></i> <%= I18n.t('registration.sing_in') %>
  						<% end %>
						<% end -%>
				  </div>
				<% end %>

				<%#= render "users/shared/links" %>
		</div>
	</div>
</div>
